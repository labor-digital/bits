{
	"compilerOptions": {
		"outDir": "dist",
		"strict": true,
		"sourceMap": true,
		"target": "es5",
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"module": "esnext",
		"jsx": "react",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": "./",
		"paths": {
			// You don't need those in your TS config, this is here only because we have all sources in the same repository
			"@labor-digital/bits/dist/*": [
				"node_modules/@labor-digital/bits/dist/*"
			],
			"@labor-digital/bits": [
				"node_modules/@labor-digital/bits/dist/index.d.ts",
				"../dist"
			],
			"@labor-digital/bits/*": [
				"node_modules/@labor-digital/bits/dist/*"
			],
			"@labor-digital/bits-translator": [
				"node_modules/@labor-digital/bits-translator/dist/index.d.ts"
			],
			"@labor-digital/bits-translator/*": [
				"node_modules/@labor-digital/bits-translator/dist/*"
			],
			"@labor-digital/bits-lit-html": [
				"node_modules/@labor-digital/bits-lit-html/dist/index.d.ts"
			],
			"@labor-digital/bits-lit-html/*": [
				"node_modules/@labor-digital/bits-lit-html/dist/*"
			]
		}
	},
	"include": [
		"./src/**/*"
	]
}