{
	"compilerOptions": {
		// Output settings.
		"outDir": "dist",
		"charset": "utf-8",
		"newLine": "LF",
		// Transpilation settings.
		"module": "es2015",
		"target": "es5",
		"pretty": true,
		// Module settings.
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		// Strictness and quality settings.
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		// Type-checking settings.
		"lib": [
			"dom",
			"es6",
			"es5",
			"es2015.promise",
			"es2015",
			"es2016",
			"es2017",
			"es2015.symbol.wellknown",
			"es2015.symbol",
			"es2015.iterable",
			"esnext",
			"es2018"
		],
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		// Type declaration settings.
		"declaration": true,
		"declarationMap": false,
		"baseUrl": "./",
		"paths": {
			"@labor-digital/bits/dist/*": [
				"./src/*"
			],
			"@labor-digital/bits/*": [
				"./src/*"
			],
			"@labor-digital/bits-translator": [
				"./node_modules/@labor-digital/bits-translator/src"
			],
			"@labor-digital/bits-translator/*": [
				"./node_modules/@labor-digital/bits-translator/src/*"
			],
			"@labor-digital/bits-lit-html": [
				"./node_modules/@labor-digital/bits-lit-html/src"
			],
			"@labor-digital/bits-lit-html/*": [
				"./node_modules/@labor-digital/bits-lit-html/src/*"
			],
			// @todo this should be removed when the translator is it's own plugin
			"@labor-digital/bits": [
				"./src"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}