{
	"name": "@labor-digital/bits",
	"version": "1.9.1",
	"description": "Code encapsulation, data-binding and reactive HTML in the light-dom; without a framework - with web-components",
	"homepage": "https://bits.labor.tools/",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/labor-digital/bits/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:labor-digital/bits.git"
	},
	"author": {
		"name": "LABOR.digital",
		"email": "info@labor.tools",
		"url": "https://labor.digital"
	},
	"contributors": [
		{
			"name": "Martin Neundorfer",
			"email": "code@neunerlei.eu",
			"url": "https://www.neunerlei.eu"
		}
	],
	"types": "dist/index.d.ts",
	"main": "dist/index.umd.js",
	"module": "dist/index.js",
	"sideEffects": false,
	"scripts": {
		"clean": "rimraf ./dist",
		"postinstall": "npm run install:translator && npm run install:litHtml",
		"install:translator": "cd plugins/Translator && npm i",
		"install:litHtml": "cd plugins/LitHtml && npm i",
		"build": "npm run build:ts && npm run build:legacy:plugins && npm run build:bundle",
		"build:ts": "npm run clean && tsc",
		"build:legacy:plugins": "npm run build:legacy:plugin:translator && npm run build:legacy:plugin:litHtml",
		"build:legacy:plugin:translator": "cd plugins/Translator && npm run build:ts",
		"build:legacy:plugin:litHtml": "cd plugins/LitHtml && npm run build:ts",
		"build:bundle": "rollup --config ./rollup.config.js",
		"watch": "npm run clean && tsc --project ./tsconfig.watch.json --watch"
	},
	"peerDependencies": {
		"@labor-digital/helferlein": "^4.2.0"
	},
	"dependencies": {
		"@labor-digital/bits-translator": "*",
		"@labor-digital/bits-lit-html": "file:./plugins/LitHtml",
		"mobx": "^6.3.2"
	},
	"devDependencies": {
		"@labor-digital/bits-translator": "file:./plugins/Translator",
		"@labor-digital/bits-lit-html": "file:./plugins/LitHtml",
		"@labor-digital/helferlein": "^4.2.0",
		"@rollup/plugin-alias": "^3.1.5",
		"@types/webpack-env": "^1.16.2",
		"rimraf": "^3.0.2",
		"rollup": "^2.55.1",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"typescript": "^4.3.5"
	}
}
